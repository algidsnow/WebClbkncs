
@{
    ViewBag.Title = "CreateNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="/Assets/ckfinder/config.js"></script>
<script src="/Assets/ckeditor/ckeditor.js"></script>
<h2>Create</h2>
<style>
    .form-control {
        width: 800px;
    }
</style>
<form method="post" action="/Home/Create">
    <div class="container">
        <div class="form-group">
            <label class="control-label">
                Title
            </label>
            <input class="form-control" name="Title" />
        </div>
        <div class="form-group">
            <label class="control-label">
                Content
            </label>
            <div style="border:1px solid #d1d1d1 ;width:800px">
                <textarea class="form-control" name="Content"></textarea>
            </div>

            <script>
                CKEDITOR.replace('Content', {
                    customConfig: '/Assets/ckeditor/config.js',
                });
            </script>
        </div>

        <div class="form-group">
            <label class="control-label">
                CreateDate
            </label>
            <input type="date" class="form-control" name="CreateDate" />
        </div>
        <div class="form-group">
            <label class="control-label">
                prioritize
            </label>
            <input type="datetime" class="form-control" name="prioritize" />
        </div>
        <button class="btn-success">Create</button>
        <button class="btn-success">Cance</button>
    </div>

</form>

