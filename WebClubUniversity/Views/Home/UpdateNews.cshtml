
@model Model.News

@{
    ViewBag.Title = "CreateNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateNews</h2>
<script src="/Assets/ckfinder/config.js"></script>
<script src="/Assets/ckeditor/ckeditor.js"></script>

<form method="post" action="/Home/UpdateNews/@Model.NewsId" enctype="multipart/form-data">


    <div class="container">
        <h4>News</h4>
        <hr />
        <div class="form-group">
            <label class="control-label">Title</label>
            <input class="form-control" name="Title" value="@Model.Title" />
        </div>

        <div class="form-group">
            <label class="control-label">Content</label>
            <textarea name="content" class="form-control">@Html.Raw(Model.Content)</textarea>
            <Script>
                CKEDITOR.replace('content', {
                    customConfig: '/Assets/ckeditor/config.js',
                });
            </Script>
        </div>

        <div class="form-group">
            <label class="control-label">Status</label>

            <textarea class="form-control" name="shortContent">@Model.shortContent</textarea>

        </div>


        <div class="form-group">
            <label class="control-label">Status</label>

            <input class="form-control" name="status" value="@Model.status" />

        </div>

        <div class="form-group">
            <label class="control-label">prioritize</label>

            <input class="form-control" name="prioritize" value=@Model.prioritize />

        </div>


        <div class="form-group">
            <label for="exampleInputFile">
                File input
            </label>
            <input type="file" class="form-control-file" id="imgInp" name="ImageUrl" />
            <input type="text" name="ImageUrl" value="@Model.UrlRepresent" hidden="hidden" />
            <img src="/Assets/images/@Model.UrlRepresent" alt="Image Preview" id="blah" width="100" height="100" name="ImageUrl" />
        </div>


        <br />
        <div>
            <input type="submit" value="Edit" class="btn btn-success" />
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</form>
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
<script>
    $(document).ready(() => {
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#blah').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgInp").change(function () {
            readURL(this);
        });
    })

</script>


